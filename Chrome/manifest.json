{
  "manifest_version": 2,

  "name": "quick-link",
  "description": "Review the next project for the SDS in one click!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Review the next project!"
  },
  "permissions": [
    "https://crossorigin.me/*",
    "https://api.scratch.mit.edu/*",
    "http://api.scratch.mit.edu/*",
    "http://scratch.mit.edu/*",
    "https://scratch.mit.edu/*",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
